{% extends 'base.html.twig' %}



{% block title %}Recherche des lieux!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-warning my-3">{{ place.name }}</h1>
        <div class="row">
        <div class="col-lg-6">
            <div class="info-place">
                <div class="card" style="width: 30rem;">
                    {# <img class="card-img-top" src="/assets/image/card2.jpg" alt="Card image cap"> #}
                    <div class="card-body">
                        <h5 class="card-title">{{place.name }}</h5>
                        {# <p class="card-text">{{ place.complementinfo }}</p> #}
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Adresse</strong> : {{place.adress }}</li>
                        <li class="list-group-item"><strong>Horraire</strong> : {{place.schedule}}</li>
                        <li class="list-group-item"><strong>Informations</strong> : {{ place.complementinfo }}</li>
                        <li class="list-group-item">{{ place.createdat|date('d-m-Y') }}</li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link btn ">Voir les Avis</a>
                        <a href="{{ path('edit_place', {'id':place.id}) }}" class="btn btn-warning ml-3">Modifier</a>
                    </div>
                </div>
            </div>

            <!-- Avis cachÃ©  -->
            <div class="reviews">
                {% for review in place.reviews %}
                <hr>
                <div class="row">
                    <div class="col-lg-3">
                        <h6 class="">{{ review.user.firstname }} {{ review.user.lastname }} le : {{ review.createdat|date('d-m-Y') }} </h6>
                        <img src="/assets/image/card2.jpg" alt="" class="rounded-circle" style="width: 9rem; height:9rem;">
                    </div>

                    <div class="col-lg-7">
                    <p class="lead">{{ review.rate }}/5</p>
                    <p class="lead">{{review.title}}</p>
                    <p class="lead">{{ review.commentary }}</p>
                    </div>

                    <div class="col-lg-2">
                        <a href="{{ path('delete_review',{'id':review.id}) }}" class="btn btn-danger">Supprimer</a>
                    </div>

                </div>    
                {% endfor %}
            </div>   
        </div>

        <div class="col-lg-6">
            <div class="map">
            <p>La map ici</p>
            </div>
        </div> 
        </div>
    </div>


{% endblock %}