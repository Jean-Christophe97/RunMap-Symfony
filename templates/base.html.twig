<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>RunMap - {% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="assets/style.css">

        {# script js mapbox #}
        <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v1.5.0/mapbox-gl.js'></script>
        {# script css mapbox #}
        <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v1.5.0/mapbox-gl.css' rel='stylesheet' />

        <script src="https://kit.fontawesome.com/498d14878f.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
  
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="{{ path('home') }}">Run<b class="text-warning">Map</b></a>
     
        <div class="ml-auto">
            <form class="form-inline my-2 my-lg-0">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <i class="fas fa-user mr-2"> Bienvenue {{ app.user.firstname }}</i>
            <a href="{{ path('app_logout') }}" class="btn btn-warning my-2 my-sm-0 font-weight-bold">Deconnexion</a>
            
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-warning my-2 my-sm-0 font-weight-bold">Connexion</a>
            {% endif %}    
            </form>
        </div>
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
